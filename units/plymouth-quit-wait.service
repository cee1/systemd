[Unit]
Description=Wait for Plymouth Boot Screen to Quit in 15 Seconds
After=rc-local.service plymouth-start.service

[Service]
ExecStart=-/lib/systemd/plymouth-quit-wait 15
Type=oneshot
TimeoutSec=20
